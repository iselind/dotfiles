#!/bin/bash

CONTAINER_NAME=devbox

# Ensure the devbox container is created and running (noisy output suppressed)
docker compose up -d --no-recreate

if [ $# -eq 0 ]; then
  docker compose exec --user ubuntu -it "$CONTAINER_NAME" /bin/bash
else
  docker compose exec --user ubuntu -it "$CONTAINER_NAME" "$@"
fi
