{
  "java.compile.nullAnalysis.mode": "automatic",
  "java": {
      "compile.nullAnalysis.mode": "automatic",
      "import.generatesMetadataFilesAtProjectRoot": false,
      "configuration.checkProjectSettingsExclusions": false
  },
  "go": {
    "goplsOptions": {
      "completeUnimported": true,
      "usePlaceholders": true
    }
  },
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": [
        "c",
        "cpp",
        "objc",
        "objcpp"
      ],
      "rootPatterns": [
        ".ccls",
        "compile_commands.json",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        }
      }
    },
    "dls": {
      "command": "diagnostic-languageserver",
      "args": [
        "--stdio"
      ],
      "filetypes": [
        "sh",
        "python",
        "cs",
        "java",
        "json",
        "go"
      ],
      "initializationOptions": {
        "mergeConfig": true,
        "linters": {
          "mypy": {
            "sourceName": "mypy",
            "command": "mypy",
            "args": [
              "--no-color-output",
              "--no-error-summary",
              "--show-column-numbers",
              "--follow-imports=silent",
              "%file"
            ],
            "formatPattern": [
              "^.*:(\\d+?):(\\d+?): ([a-z]+?): (.*)$",
              {
                "line": 1,
                "column": 2,
                "security": 3,
                "message": 4
              }
            ],
            "securities": {
              "error": "error"
            }
          },
          "golangci-lint": {
            "command": "golangci-lint",
            "rootPatterns": [
              ".git",
              "go.mod"
            ],
            "debounce": 100,
            "args": [
              "run",
              "--out-format",
              "json"
            ],
            "sourceName": "golangci-lint",
            "parseJson": {
              "sourceName": "Pos.Filename",
              "sourceNameFilter": true,
              "errorsRoot": "Issues",
              "line": "Pos.Line",
              "column": "Pos.Column",
              "message": "${Text} [${FromLinter}]"
            }
          },
          "flake8": {
            "command": "flake8",
            "debounce": 100,
            "args": [
              "--format=%(row)d:%(col)d:%(code).1s:%(code)s:%(text)s",
              "-"
            ],
            "offsetLine": 0,
            "offsetColumn": 0,
            "sourceName": "flake8",
            "formatLines": 1,
            "formatPattern": [
              "(\\d+):(\\d+):([A-Z]):(.*)(\\r|\\n)*$",
              {
                "line": 1,
                "column": 2,
                "security": 3,
                "message": 4
              }
            ],
            "securities": {
              "W": "warning",
              "E": "error",
              "F": "error",
              "C": "error",
              "N": "error"
            }
          },
          "shellcheck": {
            "command": "shellcheck",
            "debounce": 100,
            "args": [
              "--format=gcc",
              "-"
            ],
            "offsetLine": 0,
            "offsetColumn": 0,
            "sourceName": "shellcheck",
            "formatLines": 1,
            "formatPattern": [
              "^[^:]+:(\\d+):(\\d+):\\s+([^:]+):\\s+(.*)$",
              {
                "line": 1,
                "column": 2,
                "message": 4
              }
            ],
            "securities": {
              "error": "error",
              "warning": "warning",
              "note": "info"
            }
          }
        },
        "filetypes": {
          "sh": "shellcheck",
          "go": "golangci-lint",
          "python": [
            "flake8",
            "mypy"
          ]
        },
        "formatters": {
          "astyle": {
            "command": "astyle",
            "args": [
              "-A10"
            ]
          },
          "autopep8": {
            "command": "autopep8",
            "args": [
              "-"
            ]
          },
          "isort": {
            "command": "isort",
            "args": [
              "--quiet",
              "-"
            ]
          },
          "json": {
            "command": "~/.vim/python/bin/format_json.py"
          },
          "goimports": {
            "command": "goimports"
          }
        },
        "formatFiletypes": {
          "python": [
            "autopep8",
            "isort"
          ],
          "cs": "astyle",
          "go": "goimports",
          "json": "json"
        }
      }
    },
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": [
        "--lsp"
      ],
      "rootPatterns": [
        "*.cabal",
        "stack.yaml",
        "cabal.project",
        "package.yaml",
        "hie.yaml"
      ],
      "filetypes": [
        "haskell",
        "lhaskell"
      ]
    }
  }
}
